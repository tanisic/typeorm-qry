{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "Node16",
    "outDir": "/dist",
    "baseUrl": ".",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "test/utils.test.ts",
    "test/paginate-builder.test.ts",
    "test/sort-builder.test.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
