{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2021",
    "sourceMap": true,
    "noEmit": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
