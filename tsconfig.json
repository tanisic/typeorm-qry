{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
